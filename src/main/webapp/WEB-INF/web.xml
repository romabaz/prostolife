<?xml version="1.0" encoding="UTF-8"?>
<web-app metadata-complete="true"
         version="3.0"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
         http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <display-name>Prostolife blog</display-name>
    <description>Prostolife blog backend</description>
    <servlet>
        <servlet-name>UsersServlet</servlet-name>
        <servlet-class>com.romabaz.prostolife.servlet.UsersServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UsersServlet</servlet-name>
        <url-pattern>/users</url-pattern>
    </servlet-mapping>
    <listener>
        <listener-class>
            com.romabaz.prostolife.listener.ProstolifeServletContextListener
        </listener-class>
    </listener>
</web-app>
